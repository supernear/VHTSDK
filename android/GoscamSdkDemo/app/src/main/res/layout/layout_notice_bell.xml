<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    app:cardCornerRadius="10px">

    <LinearLayout
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bell_light_not_"
            android:textSize="16sp"
            android:gravity="center"
            android:minHeight="120px"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bell_light_notice"
            android:minHeight="120px"
            android:paddingBottom="20dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textColor="#000000"
            android:textSize="14sp" />
        <View style="@style/main_ver_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_button_bg_selector"
                android:text="@string/dev_add_i_know"
                android:textColor="#55AFFC"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>