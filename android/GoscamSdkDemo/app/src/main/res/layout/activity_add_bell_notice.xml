<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/notice_toolbar"
        layout="@layout/layout_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="20px"
        android:layout_below="@id/notice_toolbar">
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginStart="40px"
            android:layout_marginEnd="40px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:text="@string/bell_notice"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iv_add_notice"
            android:layout_below="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gif_5103_boot"
            android:layout_marginTop="20px"
            android:layout_marginBottom="80px"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_add_notice"
            android:layout_centerHorizontal="true"
            android:padding="20px">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2b8efb"
                android:text="@string/bell_light"/>
            <View
                android:layout_below="@id/tv"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/tv"
                android:layout_alignEnd="@id/tv"
                android:layout_height="2px"
                android:background="#2b8efb"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_step_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_marginStart="60px"
            android:layout_marginEnd="60px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@drawable/main_button_selector"
            android:text="@string/hear_notice_voice"
            android:textColor="#ffffff"/>
    </RelativeLayout>
</RelativeLayout>
